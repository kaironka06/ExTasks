@model ExTasks.Models.ABCTarea
@{
    ViewData["Title"] = "Tarea";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.oTarea.NidTarea == 0)
{

    <h1>Crear Tarea</h1>
}
else
{
    <h1>Editar Tarea</h1>
}
<div class="row">
    <div class="col-sm-4">

        <form asp-action="tarea_d" asp-controller="Home" method="post">
            <input type="hidden" asp-for="oTarea.NidTarea" />

            <div class="mb-2">
                <label class="form-label" asp-for="oTarea.Vtarea">Tarea</label>
                <input class="form-control form-control-sm" asp-for="oTarea.Vtarea" type="text" />
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="oTarea.oprioridad.NidPrioridad">Prioridad</label>
                <select class="form-select form-select-sm" asp-for="oTarea.NidPrioridad" asp-items="@Model.oListaPrioridad">
                    <option selected disabled>-- Seleccione --</option>
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="oTarea.ocategoria.NidCategoria">Categoria</label>
                <select class="form-select form-select-sm" asp-for="oTarea.NidCategoria" asp-items="@Model.oListaCategoria">
                    <option selected disabled>-- Seleccione --</option>
                </select>
            </div>

            <div class="mb-2">

                @if (Model.oTarea.NidTarea== 0)
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>
                }
                else
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Actualizar</button>

                }
                <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Home">Volver</a>

            </div>

        </form>

    </div>
</div>